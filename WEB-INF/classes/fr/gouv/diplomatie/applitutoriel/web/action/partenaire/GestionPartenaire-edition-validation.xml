<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>

    <field name="partenaireEnCours.civilite.id">
        <field-validator type="required">
            <message key="GESTION_PARTENAIRE.civilite.required"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.nom">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="GESTION_PARTENAIRE.civilite.nom.required" />
        </field-validator>
    </field>

    <field name="partenaireEnCours.prenom">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="GESTION_PARTENAIRE.civilite.prenom.required" />
        </field-validator>
    </field>
    
    <field name="partenaireEnCours.nationalite.nationalite">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="GESTION_PARTENAIRE.civilite.nationalite.required"/>
        </field-validator>
        <field-validator type="fieldexpression">
            <param name="expression"><![CDATA[
            (partenaireEnCours.nationalite.nationalite.trim() eq "")
            or (partenaireEnCours.nationalite.id neq null) ]]></param>
            <message key="GESTION_PARTENAIRE.civilite.nationalite.requiredList" />
        </field-validator>
    </field>

    <field name="partenaireEnCours.proTelFixe">
        <field-validator type="regex">
            <param name="regex">[0-9]*</param>
            <message key="GESTION_PARTENAIRE.coordpro.telfixe.format"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.proTelPort">
        <field-validator type="regex">
            <param name="regex">[0-9]*</param>
            <message key="GESTION_PARTENAIRE.coordpro.telport.format"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.proCourriel">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="GESTION_PARTENAIRE.coordpro.courriel.required"/>
        </field-validator>
        <field-validator type="email">
            <message key="GESTION_PARTENAIRE.coordpro.courriel.email"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.proAdrRue">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="GESTION_PARTENAIRE.coordpro.adresse.rue.required"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.proAdrCP">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message key="GESTION_PARTENAIRE.coordpro.adresse.cp.required"/>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">10</param>
            <message key="GESTION_PARTENAIRE.coordpro.adresse.cp.length"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.ville.id">
        <field-validator type="required">
            <message key="GESTION_PARTENAIRE.coordpro.adresse.ville.required"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.ville.pays.id">
        <field-validator type="required">
            <message key="GESTION_PARTENAIRE.coordpro.adresse.pays.required"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.assistCourriel">
        <field-validator type="email">
            <message key="GESTION_PARTENAIRE.coordassist.courriel.email"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.assistTel">
        <field-validator type="regex">
            <param name="regex">[0-9]*</param>
            <message key="GESTION_PARTENAIRE.coordassist.tel.format"/>
        </field-validator>
    </field>

    <field name="partenaireEnCours.commentaire">
        <field-validator type="stringlength">
            <param name="maxLength">255</param>
            <message key="GESTION_PARTENAIRE.divers.commentaire.length"/>
        </field-validator>
    </field>

</validators>
